*@
@{
}

<div class="col-sm-8">
    <h4 class="d-inline-block">Rooms</h4>
    <a asp-action="Add" class="btn btn-success btn-sm">Add new</a>

</div>

@if (Model.Count() == 0)
{
    <p>You do not have any rooms defined!</p>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Number</th>
            <th scope="col">Base Price</th>
            <th scope="col">Max People</th>
            <th scope="col">Beds</th>
            <th scope="col">Amenities</th>
            <th scope="col">Edit</th>

        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
        }
        @foreach (Room room in Model)
        {
            <tr>
                <th scope="row">@count</th>
                <td>
                    @room.Description
                </td>
                <td>
                    @room.Name
                </td>
                <td>
                    @room.BasePrice
                </td>
                <td>
                    @room.maxPeople()
                </td>
                <td>
                    @foreach(Bed bed in room.Beds){
                        <p>@bed.Name</p>
                    }
                </td>
                <td>
                    @foreach (Amenity amenity in room.Amenities)
                    {
                        <p>@amenity.Name</p>

                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-success btn-sm">Edit</a>
                </td>
            </tr>


            count++;
        }
    </tbody>
</table>